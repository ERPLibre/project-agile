<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_ps_epic_form" model="ir.ui.view">
        <field name="name">project.scrum.epic.form</field>
        <field name="model">project.scrum.epic</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="project_scrum_epic.view_ps_epic_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_title')]/.." position="before">

                <div class="oe_button_box" name="button_box">
                    <button
                        class="oe_stat_button"
                        type="action"
                        icon="fa-file"
                        name="%(ticket_action_from_project)d"
                        context="{'search_default_epic_id': active_id, 'default_epic_id': active_id}"
                    >
                        <field string="Tickets" name="ticket_count" widget="statinfo" />
                    </button>
                </div>

            </xpath>
        </field>
    </record>

</odoo>
