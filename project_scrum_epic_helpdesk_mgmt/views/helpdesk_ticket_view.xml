<?xml version='1.0' encoding='utf-8' ?>
<odoo>
    <record id="ticket_action_from_project" model="ir.actions.act_window">
        <field name="name">Tickets</field>
        <field name="res_model">helpdesk.ticket</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="helpdesk_mgmt.helpdesk_ticket_view_search" />
    </record>
    <!-- TREE TICKET HELP DESK -->
    <record id="ticket_view_tree" model="ir.ui.view">
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk_mgmt.ticket_view_tree" />
        <field name="arch" type="xml">
            <field name="us_id" position="after">
                <field name="epic_id" optional="hide" />
            </field>
        </field>
    </record>
    <!-- SEARCH TICKET HELP DESK -->
    <record id="helpdesk_ticket_view_search" model="ir.ui.view">
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk_mgmt.helpdesk_ticket_view_search" />
        <field name="arch" type="xml">
            <field name="us_id" position="after">
                <field name="epic_id" />
            </field>
            <filter name="group_us" position="after">
                <filter
                    string="Epic"
                    name="group_epic"
                    domain="[]"
                    context="{'group_by':'epic_id'}"
                />
            </filter>
        </field>
    </record>
    <!-- View Form Ticket -->
    <record id="ticket_view_form" model="ir.ui.view">
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="project_scrum_helpdesk_mgmt.ticket_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button
                    class="oe_inline oe_stat_button"
                    type="action"
                    icon="fa-tasks"
                    name="%(project_scrum.action_show_scrum_tasks)d"
                    string="Tasks Epic"
                    context="{'search_default_epic_id': epic_id, 'default_epic_id': epic_id}"
                    attrs="{'invisible':[('epic_id', '=', False)]}"
                />
            </xpath>
            <xpath expr="//field[@name='us_id']" position="after">
                <field
                    name="epic_id"
                    domain="[('project_id', '=', project_id)]"
                    attrs="{'invisible':['|',('project_id', '=', False),('project_use_scrum', '=', False)]}"
                    context="{'default_project_id': project_id}"
                />
            </xpath>
        </field>
    </record>
</odoo>
