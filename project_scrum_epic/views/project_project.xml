<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="edit_ps_project" model="ir.ui.view">
        <field name="name">project.scrum.project.form</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project_scrum.edit_ps_project" />
        <field name="arch" type="xml">
            <button name="attachment_tree_view" position="before">
                <button
                    class="oe_inline oe_stat_button"
                    type="action"
                    icon="fa-files-o"
                    name="%(action_ps_epic_current)d"
                    attrs="{'invisible':[('use_scrum', '=', False)]}"
                >
                    <field name="epic_count" widget="statinfo" />
                </button>
            </button>
        </field>
    </record>

    <record id="view_ps_kanban" model="ir.ui.view">
        <field name="name">project.scrum.project.kanban</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project_scrum.view_ps_kanban" />
        <field name="arch" type="xml">
            <field name="task_count" position="before">
                <field name="epic_count" attrs="{'invisible':[('use_scrum', '=', False)]}" />
            </field>
            <div class="o_project_kanban_boxes" position="inside">
                <a
                    t-if="record.epic_count.raw_value"
                    name="%(action_ps_epic_current)d"
                    type="action"
                    style="margin-right: 10px"
                    attrs="{'invisible':[('use_scrum', '=', False)]}"
                >
                    <span class="o_value">
                        <t t-esc="record.epic_count.raw_value" />
                    </span>
                    <span class="o_label">Epics</span>
                </a>
            </div>
        </field>
    </record>
</odoo>
