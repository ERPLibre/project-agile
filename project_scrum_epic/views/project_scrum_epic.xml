<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_ps_epic_kanban" model="ir.ui.view">
        <field name="name">project.scrum.epic.kanban</field>
        <field name="model">project.scrum.epic</field>
        <field name="type">kanban</field>
        <field name="arch" type="xml">
            <kanban default_group_by="project_id">
                <field name="color" />
                <field name="name" />
                <field name="kanban_state" />
                <field name="task_count" />
                <templates>
                    <t t-name="kanban-box">
                        <div
                            t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_card oe_kanban_global_click"
                        >
                            <div class="o_dropdown_kanban dropdown" groups="base.group_user">
                                <a
                                    class="dropdown-toggle btn"
                                    role="button"
                                    data-toggle="dropdown"
                                    href="#"
                                    title="Dropdown menu"
                                >
                                    <span class="fa fa-bars fa-lg" />
                                </a>
                                <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                                    <t t-if="widget.editable">
                                        <li>
                                            <a type="edit">Edit Epic</a>
                                        </li>
                                    </t>
                                    <t t-if="widget.deletable">
                                        <li>
                                            <a type="delete">Delete</a>
                                        </li>
                                    </t>
                                    <li>
                                        <ul class="oe_kanban_colorpicker" data-field="color" />
                                    </li>
                                </ul>
                            </div>

                            <div class="oe_kanban_content">
                                <div>
                                    <b>
                                        <field name="reference" />
                                        :
                                    </b>
                                    <b>
                                        <field name="name" />
                                    </b>
                                </div>
                                <div>
                                    <a t-if="record.task_count.raw_value">
                                        <t t-raw="record.task_count.raw_value" />
                                        Tasks
                                    </a>
                                </div>
                            </div>
                            <div class="oe_clear" />
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_ps_epic_form" model="ir.ui.view">
        <field name="name">project.scrum.epic.form</field>
        <field name="model">project.scrum.epic</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Epics">
                <sheet string="Epic">
                    <group>
                        <div class="oe_title">
                            <h3>
                                <field name="reference" class="oe_inline" readonly="1" />
                            </h3>
                        </div>
                    </group>
                    <h1>
                        <field name="name" placeholder="Epic..." class="oe_inline" />
                    </h1>

                    <group col="4">
                        <field name="sequence" />
                    </group>
                    <group col="4">
                        <field name="project_id" />
                        <field
                            name="sprint_ids"
                            widget="many2many_tags"
                            context="{'default_project_id': project_id,}"
                            domain="[('project_id', '=' , project_id)]"
                        />
                    </group>

                    <notebook colspan="5">
                        <page string="Description">
                            <field name="description" />
                        </page>
                        <page string="Tasks">
                            <field
                                name="task_ids"
                                string="Task"
                                context="{
                                    'default_project_id': project_id,
                                    'default_epic_id': id,
                                    }"
                            >
                                <!--'default_sprint_id': sprint_id, -->
                                <tree>
                                    <field name="sequence" widget="handle" />
                                    <field name="name" />
                                    <field name="user_id" />
                                    <field name="date_deadline" />
                                    <field name="stage_id" />
                                </tree>
                            </field>
                        </page>
                        <page string="User stories">
                            <field
                                name="us_ids"
                                string="User story"
                                context="{
                                    'default_project_id': project_id,
                                    'default_epic_id': id,
                                    }"
                            >
                                <!--'default_sprint_id': sprint_id, -->
                                <tree>
                                    <field name="sequence" widget="handle" />
                                    <field name="name" />
                                    <field name="kanban_state" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field
                        name="message_follower_ids"
                        widget="mail_followers"
                        help="Follow this Epic to automatically track the events ."
                        groups="base.group_user"
                    />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <record id="view_ps_epic_tree" model="ir.ui.view">
        <field name="name">project.scrum.epic.tree</field>
        <field name="model">project.scrum.epic</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree>
                <field name="reference" />
                <field name="name" />
                <field name="sprint_ids" />
                <field name="project_id" />
                <field name="task_count" />
            </tree>
        </field>
    </record>

    <record id="view_ps_epic_search" model="ir.ui.view">
        <field name="name">project.scrum.epic.search</field>
        <field name="model">project.scrum.epic</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search string="Epics">
                <field name="name" />
                <field name="project_id" />
                <field name="sprint_ids" />
                <field name="task_ids" />
                <group expand="0" string="Group By...">
                    <separator orientation="vertical" />
                    <filter string="Project" name="group_by_project" domain="[]" context="{'group_by':'project_id'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="action_ps_epic_all" model="ir.actions.act_window">
        <field name="name">Epics</field>
        <field name="res_model">project.scrum.epic</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="view_id" ref="view_ps_epic_tree" />
        <field name="context">{"search_default_current": 1}</field>
        <field name="search_view_id" ref="view_ps_epic_search" />
        <field name="help">The Epics of scrum.</field>
    </record>

    <record id="action_ps_epic_current" model="ir.actions.act_window">
        <field name="name">Epics</field>
        <field name="res_model">project.scrum.epic</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="view_id" ref="view_ps_epic_kanban" />
        <field name="context">
            {
            'search_default_project_id': [active_id],
            'default_project_id': active_id,
            'search_default_group_by_project':
            1,
            'active_test':
            False,
            }
        </field>
        <field name="search_view_id" ref="view_ps_epic_search" />
        <field name="help">The epics of scrum.</field>
    </record>
</odoo>
