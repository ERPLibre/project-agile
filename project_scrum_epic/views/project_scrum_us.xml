<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_ps_us_form" model="ir.ui.view">
        <field name="name">project.scrum.us.form</field>
        <field name="model">project.scrum.us</field>
        <field name="inherit_id" ref="project_scrum.view_ps_us_form" />
        <field name="arch" type="xml">
            <field name="sprint_ids" position="after">
                <field
                    string="Epic"
                    name="epic_id"
                    context="{'default_project_id':project_id}"
                    domain="[('project_id', '=', project_id)]"
                />
            </field>
        </field>
    </record>
</odoo>
